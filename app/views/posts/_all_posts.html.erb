<% posts.each do |post| %>
    <%= post.body %><br>
    <% if current_user == post.user %>
        <%= link_to  "Delete", post_path(post.id), method: :delete, data: { confirm: 'Do you want to delete this post?' } %> | 
        <%= link_to  "Edit", edit_post_path(post.id) %> | 
        <%= render  "likes/like_unlike", post: post %><br>
    <% else %>
        <%= render  "likes/like_unlike", post: post %><br>
    <% end %>
<% end %>