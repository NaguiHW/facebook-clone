<% post.comments.each do |comment| %>
    <% if comment.user %>
        <%= link_to  comment.user.full_name, user_path(comment.user) %>:
        <%= comment.body %><br>
        Commented <%= time_ago_in_words(comment.created_at) %> ago.<br><br>
        <% if current_user == comment.user  %>
            <%= link_to  "Delete comment", post_comment_path(comment, comment.id), method: :delete %><br>
        <% end %>
    <%end%>
<% end %>